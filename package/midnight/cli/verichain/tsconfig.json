{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"declarationMap": true,
		"module": "ESNext",
		"target": "ES2022",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"verbatimModuleSyntax": false,
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": ["dist", "node_modules"]
}
