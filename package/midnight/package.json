{
  "name": "verichain",
  "version": "1.0.0",
  "description": "A privacy-proven product-authenticity layer on the Midnight Network that turns physical items into ZK-verified NFTs, proving origin and integrity without exposing supplier data.",
  "main": "index.js",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:contracts": "npm run build --workspace=@verichain/contracts",
    "build:api": "npm run build --workspace=@verichain/api",
    "build:cli": "npm run build --workspace=@verichain/cli",
    "cli": "npm run start --workspace=@verichain/cli",
    "test": "npm run test --workspaces"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Recursion-Labs/verichain.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "bugs": {
    "url": "https://github.com/Recursion-Labs/verichain/issues"
  },
  "homepage": {
    "url": "https://github.com/Recursion-Labs/verichain#readme"
  },
  "dependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "devDependencies": {
    "@types/typescript": "^2.0.0",
    "@biomejs/biome": "1.9.4"
  }
}
